<%= form_with url: public_search_path, method: :get, class: "d-flex" do |f| %>
  <%= f.select :genre_id, options_from_collection_for_select(Genre.all, :id, :name), {include_blank: "すべての商品" }, { class: "col-lg-2 text-center form-control" } %>
  <%= f.submit 'ジャンル検索', class: "btn btn-outline-dark ml-2" %>
<% end %>